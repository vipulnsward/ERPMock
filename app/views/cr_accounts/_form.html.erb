<%= semantic_form_for @cr_account do |f| %>
  <%= f.inputs do %>
    <%= f.input :amount %>
    <%= f.input :cr_date %>
    <%= f.input :cr_type, :as => :select ,:include_blank => false, :collection => ["Cash", "Cheque"] %>
    <%= f.input :cheque %>
    <%= f.input :customer, :include_blank => false %>
  <% end %>

  <%= f.buttons do %>
    <%= f.commit_button %>
  <% end %>
<% end %>
