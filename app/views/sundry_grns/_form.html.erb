<%= semantic_form_for @sundry_grn do |f| %>
  <%= f.inputs do %>
    <%= f.input :bill %>
    <%= f.input :billdate %>
    <%= f.input :issue , :label => "Issue Date" %>
    <%= f.input :supplier, :include_blank => false %>

     <%= f.inputs :name => 'Line Item #%i', :for => :line_items do |f|  %>
      <%= f.input :qty, :label => "Quantity"%>
      <%= f.input :item, :include_blank => false  %>
    <%end%>



  <% end %>

  <%= f.buttons do %>
    <%= f.commit_button %>
  <% end %>
<% end %>
