<%= semantic_form_for @requisition do |f| %>
  <%= f.inputs do %>
    <%= f.input :issue %>
    
      <%= f.inputs :name => 'Line Item #%i', :for => :line_items do |f|  %>
      <%= f.input :req_qty%>
      <%= f.input :qty , :default => 0%>
      <%= f.input :rev_qty%>
      <%= f.input :acc_qty%>
      <% #f.input :item_id, :input_html => {"data-pre" => "[#{f.object.item.to_json}]", :class => "token_input" } %>
      <%= f.input :item, :as => :select, :include_blank =>false%>
    <%end%>

 
  <% end %>

  <%= f.buttons do %>
    <%= f.commit_button %>
  <% end %>
<% end %>
