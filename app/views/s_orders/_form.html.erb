<%= semantic_form_for @s_order do |f| %>
  <%= f.inputs do %>
    <%= f.input :ref %>
    <%= f.input :issue %>
    <%= f.input :customer, :include_blank =>false %>

    <%= f.inputs :name => 'Line Item #%i', :for => :line_items do |f|  %>
      <%= f.input :qty , :label => "Requested Qty"%>
      <%= f.input :rev_qty, :label => "Sent Qty"%>
      <%= f.input :acc_qty, :label => "Accepted Qty"%>	
      <%= f.input :item, :include_blank => false  %> 
    <%end%>	


  <% end %>

  <%= f.buttons do %>
    <%= f.commit_button %>
  <% end %>
<% end %>
