<%= semantic_form_for @item do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :rate %>
    <%= f.input :s_rate %>	
    <%= f.input :unit, :as => :select, :include_blank =>false ,:collection => ["Nos", "Boxes", "KM", "M", "KG"] %>
    <%= f.input :desc %>
    <%= f.input :iclass,  :include_blank => false %>
    <%= f.input :stock, :label => "Opening Stock"%> 
 <% end %>

  <%= f.buttons do %>
    <%= f.commit_button %>
  <% end %>
<% end %>
