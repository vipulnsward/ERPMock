<%= semantic_form_for @item do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :rate %>
    <%= f.input :s_rate %>	
    <%= f.input :unit %>
    <%= f.input :desc %>
    <%= f.input :iclass,  :include_blank => false %>
  <% end %>

  <%= f.buttons do %>
    <%= f.commit_button %>
  <% end %>
<% end %>
