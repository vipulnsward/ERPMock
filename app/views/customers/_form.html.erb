<%= semantic_form_for @customer do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :desc %>
    <%= f.input :street %>
    <%= f.input :state %>
    <%= f.input :country %>
    <%= f.input :zip %>
    <%= f.input :mail %>
    <%= f.input :altmail %>
    <%= f.input :ct1 %>
    <%= f.input :ct2 %>
  <% end %>

  <%= f.buttons do %>
    <%= f.commit_button %>
  <% end %>
<% end %>
