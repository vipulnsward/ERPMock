<h1>Listing customers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Desc</th>
    <th>Street</th>
    <th>State</th>
    <th>Country</th>
    <th>Zip</th>
    <th>Mail</th>
    <th>Altmail</th>
    <th>Ct1</th>
    <th>Ct2</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @customers.each do |customer| %>
  <tr>
    <td><%= customer.name %></td>
    <td><%= customer.desc %></td>
    <td><%= customer.street %></td>
    <td><%= customer.state %></td>
    <td><%= customer.country %></td>
    <td><%= customer.zip %></td>
    <td><%= customer.mail %></td>
    <td><%= customer.altmail %></td>
    <td><%= customer.ct1 %></td>
    <td><%= customer.ct2 %></td>
    <td><%= link_to 'Show', customer %></td>
    <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
    <td><%= link_to 'Destroy', customer, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

